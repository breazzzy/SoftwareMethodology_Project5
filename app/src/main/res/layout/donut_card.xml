<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:id="@+id/rowLayout">


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/donutFlavor"
        android:textColor="@color/black"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/donutImage"/>

    <ImageView
        android:id="@+id/donutImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/donutPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:layout_below="@id/donutFlavor"
        android:layout_toEndOf="@id/donutImage"/>

    <Button
        android:id="@+id/plusBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/donutPrice"
        android:text="+" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/plusBTN"/>


</RelativeLayout>