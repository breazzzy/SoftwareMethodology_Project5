<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:text="@string/rucafe"
            android:textSize="90px"
            android:textColor="@color/red"/>

        <ImageButton
            android:id="@+id/IBdonut"
            android:layout_width="121dp"
            android:layout_height="113dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Donut"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/donut"
            android:onClick="openDonutMenu"/>

        <ImageButton
            android:id="@+id/IBcoffee"
            android:layout_width="131dp"
            android:layout_height="103dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Coffee"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/coffee"
            android:onClick="openCoffeeMenu"/>

        <ImageButton
            android:id="@+id/IBbasket"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Shopping Cart"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/shopping" />

        <ImageButton
            android:id="@+id/IBorders"
            android:layout_width="138dp"
            android:layout_height="115dp"
            android:layout_marginBottom="120dp"
            android:contentDescription="Orders"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/orders" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>